{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "es2020",
    /* ES Modules support */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    /* Other recommended options */
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}